<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               label="Randomize Identifiers">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <test
                        forcePluginActivation="true"
                        property="de.uka.ipd.sdq.identifier.uiutils.propertytester.identifier.child">
                  </test>
               </iterate>
            </visibleWhen>
            <command
                  commandId="de.uka.ipd.sdq.identifier.uiutils.identifier.randomize.single"
                  style="push">
            </command>
            <command
                  commandId="de.uka.ipd.sdq.identifier.uiutils.identifier.randomize.subtree"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="de.uka.ipd.sdq.identifier.uiutils.identifier.randomize.single"
            name="Element">
      </command>
      <command
            id="de.uka.ipd.sdq.identifier.uiutils.identifier.randomize.subtree"
            name="Subtree">
      </command>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="de.uka.ipd.sdq.identifier.uiutils.AnyIdentifierChildPropertyTester"
            id="de.uka.ipd.sdq.identifier.uiutils.propertytester.identifier"
            namespace="de.uka.ipd.sdq.identifier.uiutils.propertytester.identifier"
            properties="child"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.uka.ipd.sdq.identifier.uiutils.IdentifierRandomizerForSingleElementCommandHandler"
            commandId="de.uka.ipd.sdq.identifier.uiutils.identifier.randomize.single">
         <activeWhen>
            <iterate
                  ifEmpty="false"
                  operator="or">
               <instanceof
                     value="de.uka.ipd.sdq.identifier.Identifier">
               </instanceof>
            </iterate>
         </activeWhen>
      </handler>
      <handler
            class="de.uka.ipd.sdq.identifier.uiutils.IdentifierRandomizerForSubtreeCommandHandler"
            commandId="de.uka.ipd.sdq.identifier.uiutils.identifier.randomize.subtree">
         <activeWhen>
            <iterate>
               <test
                     forcePluginActivation="true"
                     property="de.uka.ipd.sdq.identifier.uiutils.propertytester.identifier.child">
               </test>
            </iterate>
         </activeWhen>
      </handler>
   </extension>

</plugin>
